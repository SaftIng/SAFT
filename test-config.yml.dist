#
# This file contains a list with different configurations for test cases which rely on store and cache.
#
# Feel free to copy it to test-config.yml and adapt. You can reuse existing configurations or you can use your own.

# SparqlStore and TriplePatternStore related configurations
httpConfig: &httpConfig
    class: "Saft\\Backend\\HttpStore\\Store\\Http"
    authUrl: "http://localhost:8890/sparql-auth"
    queryUrl: "http://localhost:8890/sparql"
    username: "dba"
    password: "dba"

queryCacheConfig: &queryCacheConfig
    class: "Saft\\QueryCache\\QueryCache"

virtuosoConfig: &virtuosoConfig
    class: "Saft\\Backend\\Virtuoso\\Store\\Virtuoso"
    dsn: "VOS"
    username: "dba"
    password: "dba"

# Cache related configurations.
fileCacheConfig: &fileCacheConfig
    class: "Saft\\Backend\\FileCache\\Cache\\File"
    # cachePath: "/tmp/saft/"

memcachedCacheConfig: &memcachedCacheConfig
    class: "Saft\\Backend\\MemcacheD\\Cache\\MemcacheD"
    host: "127.0.0.1"
    port: "11211"

# Test configuration
configuration:
    # Default cache
    # If a TestCase has to decide which cache backend to use, it uses this.
    standardCache:
        <<: *fileCacheConfig

    # Default store
    # If a TestCase has to decide which store implementation to use, it uses this.
    standardStore:
        <<: *virtuosoConfig
